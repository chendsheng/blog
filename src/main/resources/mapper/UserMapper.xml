<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.onestep.dao.UserMapper">
    <select id="count" resultType="java.lang.Integer">
        select count(*) from user
    </select>
    <select id="selectUsers" resultType="user">
        select * from user
    </select>
    <select id="selectRole" resultType="java.lang.String">
        select role from user where name = #{name}
    </select>
    <select id="selectUser" resultType="com.onestep.entity.User">
        select * from user where name = #{name}
    </select>
    <insert id="insertUser"  useGeneratedKeys="true" keyProperty="id">
        insert into user
        <trim suffix=")" prefix="(" suffixOverrides=",">
            <if test="photo != null">
                photo,
            </if>
            <if test="name != null">
                name,
            </if>
            <if test="password != null">
                password,
            </if>
            <if test="role != null">
                role,
            </if>
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="photo != null">
                #{photo},
            </if>
            <if test="name != null">
                #{name},
            </if>
            <if test="password != null">
                #{password},
            </if>
            <if test="role != null">
                #{role},
            </if>
        </trim>
    </insert>
    <update id="updateUserbyId">
        update user
        <set>
            <if test="photo != null">
                photo = #{photo},
            </if>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="password != null">
                password = #{password},
            </if>
            <if test="role != null">
                role = #{role},
            </if>
        </set>
        where id = #{id}
    </update>

    <delete id="batchDeleteUserbyIds">
        delete from user
        where id in
        <foreach collection="array" open="(" close=")" separator="," item="id">
            #{id}
        </foreach>
    </delete>


</mapper>